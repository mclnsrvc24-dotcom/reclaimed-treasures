{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$meta": {
    "name": "Reise Design Tokens",
    "version": "1.0.0",
    "brand": "Reise — Vintage clothing & home goods",
    "format": "W3C Design Token Community Group (DTCG)",
    "note": "Use with Style Dictionary, Token Transformer (Figma Tokens), or consume directly as CSS custom properties via tokens.css"
  },

  "color": {
    "primitive": {
      "cream": {
        "0":   { "$value": "#FDFAF5", "$type": "color", "$description": "Near white, warm" },
        "50":  { "$value": "#F8F3EB", "$type": "color", "$description": "Page background" },
        "100": { "$value": "#F2EBE0", "$type": "color", "$description": "Subtle surface" },
        "200": { "$value": "#E8DDD0", "$type": "color", "$description": "Card backgrounds" },
        "300": { "$value": "#D9CEBC", "$type": "color", "$description": "Border default" },
        "400": { "$value": "#C8B9A5", "$type": "color", "$description": "Border strong" },
        "500": { "$value": "#B0A08C", "$type": "color", "$description": "Disabled elements" }
      },
      "ink": {
        "950": { "$value": "#130F0B", "$type": "color", "$description": "Deepest ink" },
        "900": { "$value": "#1C1814", "$type": "color", "$description": "Primary text, key UI" },
        "800": { "$value": "#2C2620", "$type": "color", "$description": "Secondary heading" },
        "700": { "$value": "#3D3630", "$type": "color", "$description": "Tertiary heading" },
        "600": { "$value": "#52473F", "$type": "color", "$description": "Body emphasis" },
        "500": { "$value": "#6A5E55", "$type": "color", "$description": "Muted text" },
        "400": { "$value": "#87796F", "$type": "color", "$description": "Placeholder" },
        "300": { "$value": "#A39790", "$type": "color", "$description": "Disabled text" }
      },
      "stone": {
        "400": { "$value": "#9B9490", "$type": "color" },
        "300": { "$value": "#B5AFAA", "$type": "color" },
        "200": { "$value": "#CFC9C5", "$type": "color" },
        "100": { "$value": "#E4E0DC", "$type": "color" },
        "50":  { "$value": "#F0EDEA", "$type": "color" }
      },
      "denim": {
        "700": { "$value": "#3A5470", "$type": "color" },
        "600": { "$value": "#4C6D8C", "$type": "color" },
        "500": { "$value": "#5F85A8", "$type": "color" },
        "400": { "$value": "#7A9DB8", "$type": "color" },
        "300": { "$value": "#9DBACF", "$type": "color" },
        "200": { "$value": "#C0D4E0", "$type": "color" },
        "100": { "$value": "#E0EAF0", "$type": "color" }
      },
      "error":   { "$value": "#7A3128", "$type": "color" },
      "success": { "$value": "#3A5C45", "$type": "color" }
    },
    "semantic": {
      "background": {
        "page":     { "$value": "{color.primitive.cream.50}",  "$type": "color" },
        "surface":  { "$value": "{color.primitive.cream.0}",   "$type": "color" },
        "subtle":   { "$value": "{color.primitive.cream.100}", "$type": "color" },
        "muted":    { "$value": "{color.primitive.cream.200}", "$type": "color" },
        "inverted": { "$value": "{color.primitive.ink.900}",   "$type": "color" }
      },
      "text": {
        "primary":   { "$value": "{color.primitive.ink.900}",  "$type": "color" },
        "secondary": { "$value": "{color.primitive.ink.600}",  "$type": "color" },
        "tertiary":  { "$value": "{color.primitive.ink.400}",  "$type": "color" },
        "disabled":  { "$value": "{color.primitive.ink.300}",  "$type": "color" },
        "inverted":  { "$value": "{color.primitive.cream.0}",  "$type": "color" },
        "accent":    { "$value": "{color.primitive.denim.600}", "$type": "color" },
        "error":     { "$value": "{color.primitive.error}",    "$type": "color" },
        "success":   { "$value": "{color.primitive.success}",  "$type": "color" }
      },
      "border": {
        "strong":   { "$value": "{color.primitive.ink.900}",   "$type": "color" },
        "default":  { "$value": "{color.primitive.cream.400}", "$type": "color" },
        "subtle":   { "$value": "{color.primitive.cream.300}", "$type": "color" },
        "muted":    { "$value": "{color.primitive.cream.200}", "$type": "color" }
      }
    }
  },

  "typography": {
    "fontFamily": {
      "display": { "$value": "'Cormorant Garamond', Georgia, 'Times New Roman', serif", "$type": "fontFamily" },
      "body":    { "$value": "'Jost', 'Helvetica Neue', Arial, sans-serif", "$type": "fontFamily" },
      "mono":    { "$value": "'Courier New', Courier, monospace", "$type": "fontFamily" }
    },
    "fontSize": {
      "2xs":   { "$value": "0.563rem",  "$type": "dimension", "$description": "~9px — Fine print" },
      "xs":    { "$value": "0.75rem",   "$type": "dimension", "$description": "12px — Captions, labels" },
      "sm":    { "$value": "0.875rem",  "$type": "dimension", "$description": "14px — Secondary body" },
      "base":  { "$value": "1rem",      "$type": "dimension", "$description": "16px — Primary body" },
      "md":    { "$value": "1.125rem",  "$type": "dimension", "$description": "18px — Lead text" },
      "lg":    { "$value": "1.25rem",   "$type": "dimension", "$description": "20px — Small headings" },
      "xl":    { "$value": "1.5rem",    "$type": "dimension", "$description": "24px — Sub-headings" },
      "2xl":   { "$value": "2rem",      "$type": "dimension", "$description": "32px — Section headings" },
      "3xl":   { "$value": "2.827rem",  "$type": "dimension", "$description": "~45px — Page headings" },
      "4xl":   { "$value": "4rem",      "$type": "dimension", "$description": "64px — Hero headings" },
      "5xl":   { "$value": "5.653rem",  "$type": "dimension", "$description": "~90px — Editorial display" },
      "6xl":   { "$value": "8rem",      "$type": "dimension", "$description": "128px — Brand statement" },
      "7xl":   { "$value": "11.314rem", "$type": "dimension", "$description": "~181px — Mega display" },
      "8xl":   { "$value": "16rem",     "$type": "dimension", "$description": "256px — Full-bleed brand mark" }
    },
    "fontWeight": {
      "light":    { "$value": 300, "$type": "fontWeight" },
      "regular":  { "$value": 400, "$type": "fontWeight" },
      "medium":   { "$value": 500, "$type": "fontWeight" },
      "semibold": { "$value": 600, "$type": "fontWeight" }
    },
    "lineHeight": {
      "none":      { "$value": 1,     "$type": "number" },
      "tightest":  { "$value": 1.05,  "$type": "number" },
      "tight":     { "$value": 1.15,  "$type": "number" },
      "snug":      { "$value": 1.3,   "$type": "number" },
      "normal":    { "$value": 1.5,   "$type": "number" },
      "relaxed":   { "$value": 1.65,  "$type": "number" },
      "loose":     { "$value": 1.875, "$type": "number" }
    },
    "letterSpacing": {
      "tightest": { "$value": "-0.05em", "$type": "dimension" },
      "tighter":  { "$value": "-0.03em", "$type": "dimension" },
      "tight":    { "$value": "-0.01em", "$type": "dimension" },
      "normal":   { "$value": "0em",     "$type": "dimension" },
      "wide":     { "$value": "0.05em",  "$type": "dimension" },
      "wider":    { "$value": "0.1em",   "$type": "dimension" },
      "widest":   { "$value": "0.2em",   "$type": "dimension" },
      "spaced":   { "$value": "0.3em",   "$type": "dimension", "$description": "All-caps UI labels" }
    }
  },

  "spacing": {
    "0":     { "$value": "0",       "$type": "dimension" },
    "px":    { "$value": "1px",     "$type": "dimension" },
    "0-5":   { "$value": "0.125rem","$type": "dimension" },
    "1":     { "$value": "0.25rem", "$type": "dimension" },
    "2":     { "$value": "0.5rem",  "$type": "dimension" },
    "3":     { "$value": "0.75rem", "$type": "dimension" },
    "4":     { "$value": "1rem",    "$type": "dimension" },
    "5":     { "$value": "1.25rem", "$type": "dimension" },
    "6":     { "$value": "1.5rem",  "$type": "dimension" },
    "8":     { "$value": "2rem",    "$type": "dimension" },
    "10":    { "$value": "2.5rem",  "$type": "dimension" },
    "12":    { "$value": "3rem",    "$type": "dimension" },
    "16":    { "$value": "4rem",    "$type": "dimension" },
    "20":    { "$value": "5rem",    "$type": "dimension" },
    "24":    { "$value": "6rem",    "$type": "dimension" },
    "32":    { "$value": "8rem",    "$type": "dimension" },
    "40":    { "$value": "10rem",   "$type": "dimension" },
    "48":    { "$value": "12rem",   "$type": "dimension" },
    "64":    { "$value": "16rem",   "$type": "dimension" }
  },

  "border": {
    "radius": {
      "none": { "$value": "0",      "$type": "dimension" },
      "xs":   { "$value": "2px",    "$type": "dimension" },
      "full": { "$value": "9999px", "$type": "dimension" }
    },
    "width": {
      "thin":  { "$value": "1px",   "$type": "dimension" },
      "base":  { "$value": "1.5px", "$type": "dimension" },
      "thick": { "$value": "2px",   "$type": "dimension" }
    }
  },

  "motion": {
    "duration": {
      "instant":   { "$value": "50ms",   "$type": "duration" },
      "fast":      { "$value": "120ms",  "$type": "duration" },
      "normal":    { "$value": "220ms",  "$type": "duration" },
      "slow":      { "$value": "380ms",  "$type": "duration" },
      "slower":    { "$value": "550ms",  "$type": "duration" },
      "sluggish":  { "$value": "900ms",  "$type": "duration" },
      "cinematic": { "$value": "1400ms", "$type": "duration" }
    },
    "easing": {
      "default":   { "$value": "cubic-bezier(0.4, 0, 0.2, 1)",   "$type": "cubicBezier" },
      "editorial": { "$value": "cubic-bezier(0.76, 0, 0.24, 1)", "$type": "cubicBezier", "$description": "Signature Reise easing — deliberate, unhurried" },
      "reveal":    { "$value": "cubic-bezier(0.16, 1, 0.3, 1)",  "$type": "cubicBezier" },
      "spring":    { "$value": "cubic-bezier(0.34, 1.56, 0.64, 1)", "$type": "cubicBezier" }
    }
  }
}
